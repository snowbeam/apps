{
  "extends": ["@snowbeam/typescript/base-build.json"],
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/build.tsbuildinfo",
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["node"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
