{
  "name": "snowbeam",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/snowbeam/snowbeam-cli",
  "description": "ðŸ’» Snowbeam CLI",
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=8.9"
  },
  "packageManager": "pnpm@8.9.0",
  "scripts": {
    "echo": "echo \"Snowbeam PNPM Workspace - ðŸ’» Snowbeam CLI\"",
    "prettier:format": "prettier -c .",
    "prettier:format:fix": "prettier -w .",
    "build": "shx rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "keywords": [
    "oclif"
  ],
  "author": {
    "name": "Md Irshad",
    "email": "mdirshaddev@gmail.com",
    "url": "https://mdirshad.vercel.app"
  },
  "bugs": "https://github.com/snowbeam/snowbeam/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowbeam/snowbeam.git",
    "directory": "apps/cli"
  },
  "license": "MIT",
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@snowbeam/typescript": "workspace:^",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10",
    "oclif": "^4.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@oclif/command": "^1.8.36",
    "@oclif/config": "^1.18.17",
    "@oclif/core": "^3",
    "@oclif/errors": "^1.3.6",
    "@oclif/parser": "^3.8.17",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^4",
    "convict": "^6.2.4",
    "dotenv": "^16.3.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "winston": "^3.11.0"
  },
  "bin": {
    "snowbeam": "./bin/snowbeam.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "oclif": {
    "bin": "snowbeam",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  }
}
