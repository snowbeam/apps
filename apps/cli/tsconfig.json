{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [],
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "fastify"],
    "target": "es2022",
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "esModuleInterop": true
  },
  "include": ["src", "server"],
  "exclude": ["node_modules", "bin", "test", "dist", "**/*spec.ts"]
}
