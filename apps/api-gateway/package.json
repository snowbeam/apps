{
  "name": "snowbeam-api-gateway",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/snowbeam/snowbeam",
  "description": "üñ•Ô∏è Snowbeam API Gateway",
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=8.9"
  },
  "packageManager": "pnpm@8.9.0",
  "scripts": {
    "echo": "echo \"Snowbeam PNPM Workspace - üñ•Ô∏è Snowbeam API Gateway\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "eslint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "prettier:format": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:up:pg": "drizzle-kit up:pg",
    "drizzle:push:pg": "drizzle-kit push:pg",
    "drizzle:check:pg": "drizzle-kit check:pg",
    "drizzle:generate:pg": "drizzle-kit generate:pg",
    "drizzle:introspect:pg": "drizzle-kit introspect:pg",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs"
  ],
  "author": {
    "name": "Md Irshad",
    "email": "mdirshaddev@gmail.com",
    "url": "https://mdirshad.vercel.app"
  },
  "bugs": "https://github.com/snowbeam/snowbeam/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowbeam/snowbeam.git",
    "directory": "apps/api-gateway"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/cache-manager": "^2.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@paralleldrive/cuid2": "^2.2.2",
    "axios": "^1.6.5",
    "bull": "^4.12.0",
    "cache-manager": "^5.3.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "deep-object-diff": "^1.1.9",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.25.2",
    "isolated-vm": "^4.7.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@snowbeam/typescript": "workspace:^",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.166.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
