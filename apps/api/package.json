{
  "$schema": "https://json.schemastore.org/package",
  "name": "snowbeam-api",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/snowbeam/snowbeam.git",
  "description": "🖥️ Snowbeam API",
  "scripts": {
    "echo": "echo \"Snowbeam PNPM Workspace - 🖥️  Snowbeam API\"",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/__tests__/jest-e2e.json",
    "eslint:lint": "eslint .",
    "eslint:lint:fix": "eslint . --fix",
    "prettier:format": "prettier --check .",
    "prettier:format:fix": "prettier --write ."
  },
  "keywords": [
    "snowbeam-api",
    "api-server",
    "nest.js",
    "typescript",
    "docker",
    "postgresql"
  ],
  "author": {
    "name": "Md Irshad",
    "email": "mdirshaddev@gmail.com",
    "url": "https://mdirshad.vercel.app"
  },
  "bugs": {
    "url": "https://github.com/snowbeam/snowbeam/issues",
    "email": "mdirshaddev+snowbeam@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowbeam/snowbeam.git",
    "directory": "apps/api"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.3.1",
    "@nestjs/swagger": "^7.2.0",
    "fastify": "^4.26.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=8.9"
  },
  "packageManager": "pnpm@8.9.0",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
